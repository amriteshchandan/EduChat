<br>
<%= form_for :user_technology, url: 'user_technologies' do |f| %>
  <strong><%= f.label "Known Technologies" %></strong>
      <%= f.select(:known, Technology.all.collect {|p| [ p.name, p.id ]},
                                                         {include_blank: false},
                                                         {multiple: true, class: "chosen-select form-control"}
                                                         )%><br> <br>
  <strong><%= f.label "Interested Technologies" %></strong>
      <%= f.select(:interested, Technology.all.collect {|p| [ p.name, p.id ]},
                                                         {include_blank: false},
                                                         {multiple: true, class: "chosen-select form-control"}
                                                         )%><br> <br>  
  <%= hidden_field_tag :user_id, current_user.id %>                                                       
  <%= f.submit "update", class: "btn btn-default" %>
<% end %>