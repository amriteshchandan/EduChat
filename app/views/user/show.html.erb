<div style="margin-left:40px; margin-right:40px;">
<h4><%= @user.name %>'s profile</h4>
<hr />
<div class="contaner">
	<div class="col-md-4">
		<div>
			<%= image_tag @user.avatar.url(:medium) , { size: '200', class: "img-thumbnail" }  if @user.avatar? %>
			<h3><%= @user.name %></h3>
			<h3><%= @user.dob %></h3>
		</div>
	</div>

	<div class="col-md-8">
		<div class="jumbotron well">
			
			<% if @user.articles.any? %>
				<h3>Articles (<%= @user.articles.count %>)</h3>
				<ol class="panel">
					<%= render partial: 'articles/article' %>
				</ol>
				<%= will_paginate @articles %>
			<% end -%>
		</div>
	</div>
</div>
<div class="clearfix"></div>
<hr>
<div class="col-md-6">
	<h4>Interested Technologies</h4>
	<% @interested_tech.each do |interested_tech| %>
		<%= interested_tech.technology.name %> <br>
	<% end -%>

</div>

<div class="col-md-6">
	<h4>Known Technologies</h4>
	<% @known_tech.each do |known_tech| %>
		<%= known_tech.technology.name %> <br>
	<% end -%>
</div>

<div class="clearfix"></div>
<hr>
</div>