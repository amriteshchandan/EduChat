<% provide(:title, "New Article") %>
<br><br>
<div style="margin-left: 2.5%; margin-right: 2.5%;">		
	  <%= form_for(@article) do |f| %>
	  	<b><font size="3"> New Article</font></b>
	  	<div>
	        <p style="padding-left: 18%; padding-right: 2%;">
	        	<%= f.text_field :title, placeholder: "Title", class: "form-control" %>
	        </p>
	    </div>
	    <hr>
	<div class="clearfix"></div>
	<div>
		<% if @article.errors.any? %>
		    <div id="error_explanation">
		 	   <h2><%= pluralize(@article.errors.count, "error") %> prohibited this article from being saved:</h2>

		        <ul>
		        <% @article.errors.full_messages.each do |message| %>
		          <li><%= message %></li>
		        <% end %>
		        </ul>
		    </div>
		<% end %>

	    <div class="col-md-2">
	      <div class="field">
	        <%= f.label :technology_id %><br>
	        <%= f.select :technology_id, tech_collection.all.collect { |p|  [p.technology.name, p.technology_id]} %>
	        <br><small><i>U can only post on technology which u know</i></small>
	      </div>
	    </div>

	    <div class="col-md-10">
	      <div class="field">
	        <%= f.label :content %><br>
	        <%= f.cktext_area :content, size: '100', class: "form-control" %>
	      </div>
	      <div class="actions">
	      	<br>
	        <%= f.submit "Submit",  class: "btn btn-default" %>
	      </div>
	    </div>
	  <% end %>
	</div>
</div>