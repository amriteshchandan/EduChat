<% provide(:title, "Home") %>
<% if user_signed_in? %> 
<%= render partial: 'layouts/nav' %>
<div style="margin-left: 2.5%; margin-right:2.5%">
<br><br>
	<div class="row">
		<div class="col-md-2">
			<span class="fa-stack fa-lg">
				<i class="fa fa-circle fa-stack-2x"></i>
				<a href="<%= new_article_path %>"><i class="fa fa-plus-square fa-stack-1x fa-inverse" data-toggle="tooltip" title="create new article" data-placement="right"></i></a>
			</span>	
		</div>
		<div class="col-md-7">
			  <div class="panel panel-default"> 
			  	<%= render 'home/feed' %>
			  </div>
		</div>
		
		<div class="col-md-3">
			<!--<div style="border-left:medium #CC0000 solid; height:100%; position:absolute;"></div> -->
			  <div class="panel panel-default">
			  	<%= render 'home/user_may_know' %>
			  </div>
		</div>	
	</div>
	
</div>
<% else %>
<div class="front_page_not_signed_in">
	<h1>Home Page Without Signed IN</h1>
	<div>
		<%= link_to "Sign in", new_user_session_path %>
	</div>
</div>

<% end %>